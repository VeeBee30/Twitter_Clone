<div class="loginBox container">
    <div class="container" style="display: flex;justify-content:center">

    <img src="/Images/twitterLogo.png" alt="" style="width: 60px; height:60px" >
    </div>
    <div class="container" style="display: flex;justify-content:center">

    <h2>Sign in to Twitter</h2>
    </div>
    <div class="container">

<form action="/home" method="post" style="display: flex;justify-content:center;flex-direction:column">
    
    <label for="username">Username</label><br>
<input type="text" id="username" name="username" placeholder="Enter Username" class="my-2" required><br>
    <label for="password">Password</label><br>
<input type="password" id="password" name="password" placeholder="Enter Password" class="my-2" required><br>
    <button type="submit" class="signinBtn">Sign In</button>
    </form>
    </div>
    <div class="signupBtnCont" style="display: flex;justify-content:center">
        <form action="/signup" method="get" style="display: flex;flex-direction:column;align-items: center;">
        <h6>New User?</h6>
        <button type="submit" class="signupBtn">Sign Up</button>
        </form>
    </div>
</div>