<html>

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/editimg.css">
  <script src="https://js.upload.io/uploader/v3"></script>

</head>

<body>
  <div class="imgChangeBox container">
    <div class="container">
      <h3>Change Image</h3>
    </div>
    <div class="container">
      <p>New Image:</p>
      <img srcset="" width="100" height="100" style="border-radius: 50%;" id="img">
    </div>
    <form action="/editimg" method="post" id="form">
      <input type="hidden" name="imgUrl" id="inp">
      <input type="hidden" name="username" value={{username}} id="inp">

      <button type="submit" id="saveBtn">Save</button>
    </form>
  </div>


</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<script>
  const uploader = Uploader({
    apiKey: "public_FW25b258NGgw6KCn3BE4QWEamNb2" // Your real API key.
  });
  uploader.open({ maxFileCount: 1 }).then(
    files => {
      const fileUrls = files.map(x => x.fileUrl).join("\n");
      const success = fileUrls.length === 0
        ? "No file selected."
        : `File uploaded:\n\n${fileUrls}`;
      const input = document.getElementById('inp')
      input.setAttribute("value", fileUrls)
      const img = document.getElementById('img')
      img.setAttribute("src", fileUrls)


    },
    error => {

    }
  );
</script>

</html>